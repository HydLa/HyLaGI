ON(mintemp) <=> []((temp-<=mintemp) & s-=0
                => s=1 & timer=0).
OFF(maxtemp) <=> []((temp->=maxtemp) & s-=1
                => s=0 & timer=0).

COOL <=> [](temp'=-1/10*temp).
HEAT <=> [](s = 1 & timer >= 1 => temp'=5-1/10*temp).

ROOM(initTemp){
  temp=initTemp, COOL<<HEAT}.
THERMO(initSwitch,initTimer){
  s=initSwitch,timer=initTimer,
  [](s'=0 & timer' = 1) << (ON(19) & OFF(21))
}.

ROOM(20),THERMO(0,0).

