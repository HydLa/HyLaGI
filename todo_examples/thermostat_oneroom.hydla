ON(temp) <=> []((t-<=temp) & s-=0
                => s=1 & timer=0).
OFF(temp) <=> []((t->=temp) & s-=1
                => s=0 & timer=0).

COOL <=> [](t'=-1/10*t).
HEAT <=> [](s = 1 & timer >= 1 => t'=5-1/10*t).

ROOM(initTemp){
  t=initTemp, COOL<<HEAT}.
THERMO(initSwitch,initTimer){
  s=initSwitch,timer=initTimer,
  [](s'=0 & timer' = 1) << (ON(19) & OFF(21))
}.

ROOM(20),THERMO(0,0).
