//燃料タンクを交換しながら上昇する気球のモデル

INIT<=>h=10/\h'=0/\fuel=1/\timer=0
        /\2<exT<4
       // /\ exT = 3
       /\1<volume<10.

CONS<=>[](exT'=0/\volume'=0).
TIME<=>[](timer'=1).

BURN<=>[](fuel=1=>h''=1).
FALL<=>[](fuel=0=>h''=-2).

VOID<=>[](timer->=volume=>fuel=0).
FULL<=>[](timer-<volume=>fuel=1).

COMP<=>
  [](timer->=volume+exT=>timer=0).

ASSERT(h>=0).

INIT,CONS,BURN,FALL,VOID,FULL,TIME<<COMP.
