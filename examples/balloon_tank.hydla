/* A program for a hot-air balloon rising by fuel tanks that are exchanged. */

INIT<=>h=10/\h'=0/\fuel=1/\timer=0
        /\ 1<exT<4
        /\ 1<volume<3.

CONS<=>[](exT'=0/\volume'=0).
TIME<=>[](timer'=1).

VOID<=>[](timer->=volume=>h''=-2).
FULL<=>[](timer-<volume=>h''=1).

COMP<=>
  [](timer->=volume+exT=>timer=0).

ASSERT(h>0).

INIT,CONS,VOID,FULL,TIME<<COMP.
