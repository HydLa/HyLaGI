// oneroom.hydla
ON(temp)   <=> []((t-<=temp \/ t<temp) /\ s-=0 => s=1 /\ timer=0).
OFF(temp)  <=> []((t->=temp \/ t>temp) /\ s-=1 => s=0 /\ timer=0).

COOL <=> [](t'=-1/2).
HEAT <=> [](s-=1 /\ (timer->1 \/ timer->=1) => t'=3).

ROOM(20),THERMO(0,10).
ROOM(initTemp){
	t=initTemp,
	COOL<<HEAT
}.
THERMO(initSwitch,initTimer){
	s=initSwitch,timer=initTimer,
	ON(18),
	OFF(22),
	[](timer'=1)
}.
